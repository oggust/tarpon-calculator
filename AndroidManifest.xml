<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polytrout.tarpon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.polytrout.tarpon.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.polytrout.tarpon.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.polytrout.tarpon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytrout.tarpon.MainActivity" />
        </activity>
        <activity
            android:name="com.polytrout.tarpon.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.polytrout.tarpon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytrout.tarpon.MainActivity" />
        </activity>
        <activity
            android:name="com.polytrout.tarpon.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.polytrout.tarpon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytrout.tarpon.MainActivity" />
        </activity>
    </application>

</manifest>
